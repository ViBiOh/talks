{
  "name": "talks",
  "version": "1.0.0",
  "description": "Talks of Vincent Boutour",
  "main": "web/index.js",
  "scripts": {
    "clean": "rm -rf ./dist && mkdir -p ./dist/doc/img && mkdir -p ./dist/js && mkdir -p ./dist/css && mkdir -p ./tmp",
    "copy:robots": "cp ./web/robots.txt ./dist/",
    "copy:sitemap": "cp ./web/sitemap.xml ./dist/",
    "copy:favicon": "cp ./web/favicon/* ./dist/",
    "copy:doc": "cp -R ./doc ./dist/",
    "copy": "npm run copy:robots && npm run copy:sitemap && npm run copy:favicon && npm run copy:doc",
    "reveal:copy": "cp ./node_modules/reveal.js/lib/js/*.js ./dist/js",
    "reveal:css": "cat ./node_modules/reveal.js/css/reveal.css | cleancss -O2 -o ./dist/css/reveal.css && cat ./node_modules/reveal.js/css/theme/night.css | grep -v -E \"^@import\" | grep -v -E \"font-family:.*?sans-serif\" | cleancss -O2 -o ./dist/css/night.css && cat ./node_modules/reveal.js/lib/css/zenburn.css | cleancss -O2 -o ./dist/css/zenburn.css && cat ./node_modules/reveal.js/css/print/paper.css | cleancss -O2 -o ./dist/css/paper.css",
    "reveal:js": "uglifyjs ./node_modules/reveal.js/plugin/markdown/markdown.js --compress --mangle --output ./dist/js/markdown.js && uglifyjs ./node_modules/reveal.js/plugin/markdown/marked.js --compress --mangle --output ./dist/js/marked.js && uglifyjs ./node_modules/reveal.js/plugin/highlight/highlight.js --compress --mangle --output ./dist/js/highlight.js && uglifyjs ./node_modules/reveal.js/js/reveal.js --compress --mangle --output ./dist/js/reveal.js",
    "reveal": "npm run reveal:copy && npm run reveal:css && npm run reveal:js",
    "js": "cat ./web/js/*.js | uglifyjs -c > ./tmp/index.js",
    "style": "cat ./web/css/style.css | cleancss -O2 -o ./tmp/style.css",
    "mustache": "./node_modules/js-index-builder/index.js -t \"web/*.html\" -b `git log --pretty=format:'%h' -n 1` -p \"web/partials/*.html\" -j ./tmp/index.js -c ./tmp/style.css -o ./tmp",
    "minify:html": "html-minifier -o ./dist/index.html -c ./html-minifier.json ./tmp/index.html",
    "minify": "npm run minify:html",
    "build": "npm run clean && npm run copy && npm run reveal && npm run js && npm run style && npm run mustache && npm run minify",
    "prestart": "go get github.com/ViBiOh/viws/cmd/viws",
    "start": "viws -directory ${INIT_CWD}/dist -tls=false -spa -csp \"default-src 'self'; script-src 'self' 'unsafe-inline'; style-src 'self' 'unsafe-inline'\""
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ViBiOh/talks.git"
  },
  "keywords": [
    "markdown",
    "talks"
  ],
  "author": "Vincent Boutour <bob@vibioh.fr>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ViBiOh/talks/issues"
  },
  "homepage": "https://github.com/ViBiOh/talks#readme",
  "dependencies": {
    "reveal.js": "latest"
  },
  "devDependencies": {
    "clean-css-cli": "latest",
    "glob": "latest",
    "html-minifier": "latest",
    "js-index-builder": "ViBiOh/js-index-builder",
    "js-utils": "ViBiOh/js-utils",
    "uglify-es": "latest",
    "yargs": "latest"
  }
}
